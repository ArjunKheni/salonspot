<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayoutreg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".Registration">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/background_color"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="@string/signUp"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/login_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edFirstname"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="First Name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/background_color"
                    android:textColorHint="@color/background_color"
                    android:textSize="16sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/white_greyish" />

                <EditText
                    android:id="@+id/edLastname"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_people_black_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/background_color"
                    android:textColorHint="@color/background_color"
                    android:textSize="16sp" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/white_greyish" />

                <EditText
                    android:id="@+id/edMobile"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_phone_in_talk_black_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Mobile"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/background_color"
                    android:textColorHint="@color/background_color"
                    android:textSize="16sp" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/white_greyish" />

                <EditText
                    android:id="@+id/edState"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_settings_input_antenna_black_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="State"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/background_color"
                    android:textColorHint="@color/background_color"
                    android:textSize="16sp" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/white_greyish" />

                <EditText
                    android:id="@+id/edCity"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_location_city_black_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="City"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/background_color"
                    android:textColorHint="@color/background_color"
                    android:textSize="16sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/white_greyish" />

                <EditText
                    android:id="@+id/edArea"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_language_black_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Area"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/background_color"
                    android:textColorHint="@color/background_color"
                    android:textSize="16sp" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/white_greyish" />

                <EditText
                    android:id="@+id/edtemail"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/background_color"
                    android:textColorHint="@color/background_color"
                    android:textSize="16sp" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/white_greyish" />

                <EditText
                    android:id="@+id/edUsername"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_mood_black_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Username"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/background_color"
                    android:textColorHint="@color/background_color"
                    android:textSize="16sp" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/white_greyish" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">
                <EditText
                    android:id="@+id/edtpass"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Password"
                    android:layout_weight="1.99"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/background_color"
                    android:textColorHint="@color/background_color"


                    android:textSize="16sp" />


</LinearLayout>
                <CheckBox
                    android:id="@+id/shpass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_marginTop="2dp"
                    android:buttonTint="@color/background_color"
                    android:text="@string/show_pwd"
                    android:textColor="@color/background_color"
                    android:textSize="14sp" />

<!--                <ImageView-->
<!--                    android:id="@+id/show_pass_btn"-->
<!--                    android:layout_width="40dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_alignParentRight="true"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:layout_marginRight="50dp"-->
<!--                    android:alpha=".5"-->
<!--                    android:onClick="ShowHidePass"-->
<!--                    android:padding="5dp"-->
<!--                    android:src="@drawable/visibility" />-->
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/loginbutton_selector"
                    android:padding="3dp"
                    android:text="Register"
                    android:layout_margin="10dp"
                    android:textColor="#a56f37"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/rtlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Already exiting User? Login now!"
                android:textColor="@color/background_color"
                android:textSize="15sp" />


        </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>